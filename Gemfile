source 'https://rubygems.org'

# Sass, Compass and extensions.
gem 'sass', '>=3.3'               # Sass.
gem 'sass-globbing'               # Import Sass files based on globbing pattern.
gem 'compass', '~> 1.0.1'         # Framework built on Sass.
gem 'compass-validator'           # So you can `compass validate`.
gem 'compass-normalize', '>=1.5'  # Compass version of normalize.css.
gem 'singularitygs'               # Grid framework.
gem 'breakpoint'                  # Manages CSS media queries.
gem 'oily_png'                    # Faster Compass sprite generation.
gem 'css_parser'                  # Helps `compass stats` output statistics.
gem 'rb-inotify', '~> 0.9.5'      # Linux
